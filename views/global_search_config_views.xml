<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="global_search_config_tree" model="ir.ui.view">
        <field name="name">global.search.config.tree</field>
        <field name="model">global.search.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="model_name" />
                <field name="search_fields" />
                <field name="icon" />
                <field name="limit" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="global_search_config_form" model="ir.ui.view">
        <field name="name">global.search.config.form</field>
        <field name="model">global.search.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="model_name" placeholder="e.g. res.partner" />
                            <field name="search_fields" placeholder="e.g. name,email,phone" />
                        </group>
                        <group>
                            <field name="icon" placeholder="e.g. fa-address-book" />
                            <field name="sequence" />
                            <field name="limit" />
                            <field name="active" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="global_search_config_action" model="ir.actions.act_window">
        <field name="name">Global Search Configuration</field>
        <field name="res_model">global.search.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add models to search
            </p>
            <p>
                Configure which models and fields are searchable from the
                global search dialog (Ctrl+K / Cmd+K).
            </p>
        </field>
    </record>

    <menuitem
        id="global_search_config_menu"
        name="Global Search"
        parent="base.menu_custom"
        action="global_search_config_action"
        sequence="50"
    />

</odoo>
